<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:text="@string/welcome"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="205dp"
            android:layout_height="310dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="40dp"
            android:paddingTop="120dp"
            android:text="Student Functionalities "
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="331dp"
            android:layout_height="310dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/okay_but_not_okay" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="140dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout20"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout20"
        app:layout_constraintStart_toStartOf="@+id/linearLayout20"
        app:layout_constraintTop_toTopOf="@+id/linearLayout20">

        <Button
            android:id="@+id/student_viewMy"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:text="View My Courses" />

        <Button
            android:id="@+id/student_viewOther"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:text="View Other Courses" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>